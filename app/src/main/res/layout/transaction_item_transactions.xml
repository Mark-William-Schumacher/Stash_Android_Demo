<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shoebag="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/transaction_item_transaction_border"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.markshoe.stashapp.CustomViews.HighlightedDrawableTransaction
            android:id="@+id/highlighted_drawable"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:drawable="@drawable/personal"
            shoebag:highlight_color="@android:color/holo_blue_light" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/in_out_symbol"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/personal"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="4">
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Name of Item"
            />
        <TextView
            android:id="@+id/transaction_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Entered Name Of Backpack"
            />

    </LinearLayout>


</LinearLayout>
